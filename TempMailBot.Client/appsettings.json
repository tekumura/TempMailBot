{
  "Telegram": {
    "Token": "YOUR_TELEGRAM_BOT_TOKEN",
    "DropPendingUpdates": true,
    "AllowedUpdates": [ "Message", "CallbackQuery" ],
    "LongPollingTimeoutSeconds": 30
  },
  "MuraLogging": {
    "MinimumLevel": "Debug",
    "Handlers": [
      {
        "Type": "console",
        "Enabled": true
      },
      {
        "Type": "file",
        "Enabled": true,
        "Settings": {
          "LogDirectory": "logs",
          "MaxFileSize": 5242880,
          "MaxBackupCount": 5
        }
      },
      {
        "Type": "database",
        "Enabled": false,
        "Settings": {
          "ConnectionString": "Server=.;Database=Logs;Trusted_Connection=True;TrustServerCertificate=True",
          "TableName": "Logs"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}


